{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Project (batch)",
			"command": "${workspaceFolder}\\build.bat",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/c"]
				},
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"detail": "运行 build.bat 脚本编译项目"
		},
    		{
			"type": "shell",
			"label": "Run Project",
			"command": "${workspaceFolder}\\run.bat",
			"group": "test",
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/c"]
				},
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"detail": "运行项目"
		},
		{
			"type": "shell",
			"label": "Build and Run Project",
			"command": "${workspaceFolder}\\build_and_run.bat",
			"group": "build",
			"options": {
				"shell": {
					"executable": "cmd.exe",
					"args": ["/c"]
				},
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"detail": "运行 build_and_run.bat 脚本编译并运行项目"
		}
	]
}